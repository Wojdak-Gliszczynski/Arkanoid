<Window x:Class="Arkanoid.WindowTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arkanoid"
        mc:Ignorable="d" Height="160" Width="200" ResizeMode="NoResize" KeyDown="KeyPressed" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid KeyDown="KeyPressed">
        <TextBox x:Name="TextBox" HorizontalAlignment="Center" Height="23" Margin="0,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="172" KeyDown="KeyPressed"/>
        <Button x:Name="AcceptButton" Content="OK" HorizontalAlignment="Center" Margin="0,99,0,0" VerticalAlignment="Top" Width="74" KeyDown="KeyPressed" Click="AcceptButton_Click"/>
        <TextBlock x:Name="Description" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="56" Width="172" KeyDown="KeyPressed"/>
    </Grid>
</Window>
